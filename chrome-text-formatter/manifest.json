{
    "manifest_version": 3,
    "name": "文本格式化工具",
    "version": "1.0",
    "description": "一个强大的文本格式化工具，支持多种格式转换",
    "permissions": [
        "clipboardWrite",
        "contextMenus"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}